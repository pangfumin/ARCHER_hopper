<mujoco>

	<option timestep="0.001" integrator="RK4">
		<flag sensornoise="enable" contact="enable" energy="enable"/>
	</option>
	<asset>
		<material name="floor" texture="checks1" texrepeat="2 2" texuniform="true"/>
		<texture name="checks1" builtin="checker" type='2d' width='256' height='256' rgb1="1 1 1" rgb2="0 0 0" />
		<material name="object" texture="checks2" texrepeat="2 2" texuniform="true"/>
		<texture name="checks2" builtin="checker" type='2d' width='256' height='256' rgb1="1 0 0" rgb2="0 1 0" />
		<texture name='plane' type='2d' builtin='checker' rgb1='0.9 0.9 0.9' rgb2='0.7 0.7 0.7' width='512' height='512'/>
        <material name='plane' reflectance='0.0' texture='plane' texrepeat='1 1' texuniform='true'/>
	</asset>


	<worldbody>
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
		<geom type="plane" size="100 1 0.1" rgba=".9 0 0 1" material="floor"/>
		<!-- <body pos="0 0 2.5" euler="0 180 0">
			<joint name="pin" type="hinge" pos="0 0 0.5" axis="0 -1 0" />
			<geom type="cylinder" size=".05 .5" rgba="0 .9 0 1" />
			<inertial mass="1" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
			<body pos="0 0 -0.5" euler="90 0 0">
				<joint name="pin2" type="hinge" pos="0 0 0.5" axis="0 0 1" />
				<geom type="cylinder" size=".25 .05" rgba="0 0 0.9 1" material="floor"/>
				<inertial mass="1" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
			</body>
		</body> -->

		<body name="chasis" pos="0 0 0.5" euler="0 0 0">
			<joint type="slide" axis="1 0 0"/>
			<joint type="slide" axis="0 0 1"/>
			<joint type="hinge" axis="0 1 0"/>
			<geom type="box" size="0.1 0.1 0.1" material="object" />
			<inertial mass="2" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
			<body name="wheel" pos="0 0 -0.25" euler="90 0 0">
				<joint name="pin1" type="hinge" pos="0 0 0.5" axis="0 0 1" />
				<geom type="cylinder" size=".15 .03" rgba="0 0 0.9 1" material="floor"/>
				<inertial mass="1" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
			</body>

		</body>

	</worldbody>

	<actuator>
		<motor name="torque1" joint="pin1" gear="1" ctrlrange="-1000 1000" ctrllimited="true"/>
		<!-- <motor name="torque2" joint="pin2" gear="1" ctrlrange="-1000 1000" ctrllimited="true"/> -->
	</actuator>

	<!-- <sensor>
		<jointpos name="encoder" joint="pin" noise="0.2"/>
		<jointvel name="gyro" joint="pin" noise="1"/>
	</sensor> -->

</mujoco>
